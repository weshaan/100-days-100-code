// linear search
#include<stdio.h>

int main()
{
	printf("Pls enter 10 numbers\n");
	int nums[10];
	for(int a=0;a<=9;a++)
	{
	scanf("%d",&nums[a]);
}
	printf("\n");
	for(int a=0;a<10;a++)
	printf("%d\n",nums[a]);
	printf("Pls enter number to search...");
	int no;
	scanf("%d",&no);
	
	for(int i=0;i<10;i++)
	{
		if(nums[i]==no)
		{
			printf("number found at nums[%d]..\n",i);
			break;
		}
		else if(i==9&&nums[9]!=no)
		printf("no number found...\n");
		
	}   
		printf("Thank you for using linear search!");
	}
	
