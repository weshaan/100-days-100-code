#include <stdio.h>

int main(void) {
	int T;
	scanf("%d",&T);
	for(int i=0;i<T;i++)
	{
	    int N;
	    scanf("%d",&N);
	    if(N%2==0)
	    {
	        
	        for(int j=0;j<N;j++)
	        {
	            if(j==0 || j==N-1)
	                printf("1");
	            else
	                printf("0");
	        }
	        printf("\n");
	    }
	    
	    
	    else
	    {
	        for(int k=0;k<N;k++)
	        {
	            if( k==0 || k==N-1)
	                printf("0");
	            else
	                printf("1");
	        }
	        printf("\n");

	    }
	    
	    
	}
	return 0;
}
