#include<stdio.h>
int main()
{
	int b=1;
	int i,j;
	printf("Enter a number...");
	int num;
	scanf("%d",&num);
	for(i=num;i>=1;i--)
	{
		for(int a=1;a<i;a++)
		 printf(" ");
		for(j=num;j>=i;j--)
		{
			printf("%d",num+1-j);
		}
		
		for(j=1;j<b&&i<num;j++)
		{
			printf("%d",b-j);
		}
		b++;
		printf("\n");
	}
}
